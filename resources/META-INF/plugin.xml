<idea-plugin>
	<id>org.lice.lang</id>
	<name>Lice</name>
	<version>1.0</version>
	<vendor email="ice1000kotlin@foxmail.com" url="http://ice1000.tech">Lice</vendor>

	<description><![CDATA[
Lice language support.
]]></description>

	<idea-version since-build="162.0"/>

	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.lice.lang.LiceFileTypeFactory"/>
		<lang.commenter
				language="Lice"
				implementationClass="org.lice.lang.LiceCommenter"/>
		<spellchecker.support
				language="Lice"
				implementationClass="org.lice.lang.LiceSpellCheckingStrategy"/>
		<lang.braceMatcher
				language="Lice"
				implementationClass="org.lice.lang.LiceBraceMatcher"/>
		<defaultLiveTemplatesProvider
				implementation="org.lice.lang.LiceLiveTemplateProvider"/>
		<liveTemplateContext
				implementation="org.lice.lang.LiceContext"/>
		<!--<lang.parserDefinition-->
				<!--language="Lice"-->
				<!--implementationClass="org.lice.lang.psi.LiceParserDefinition"/>-->
		<codeStyleSettingsProvider
				implementation="org.lice.lang.LiceCodeStyleSettingsProvider"/>
		<langCodeStyleSettingsProvider
				implementation="org.lice.lang.LiceLangCodeStyleSettingsProvider"/>
	</extensions>

	<actions>
		<action
				id="Lice.NewLiceFile"
				class="org.lice.lang.NewLiceFile"
				text="Lice File"
				description="Create a lice script file">
			<add-to-group
					group-id="NewGroup"
					anchor="before"
					relative-to-action="NewFile"/>
		</action>
	</actions>
</idea-plugin>
