<idea-plugin>
	<id>org.lice.lang</id>
	<name>Lice</name>
	<version>1.0</version>
	<category>Custom Languages</category>
	<vendor email="ice1000kotlin@foxmail.com" url="http://ice1000.org">Lice</vendor>

	<description><![CDATA[
Lice language support.<br/>
Functions provided:<br/><br/>
<ul>
  <li>Semantics-based highlighting</li>
  <li>Error reporting</li>
  <li>Code completion</li>
  <li>Reference resolving</li>
  <li>Structural editing tools</li>
</ul>
]]></description>

	<idea-version since-build="145.0"/>

	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.lice.lang.LiceFileTypeFactory"/>
		<lang.commenter
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceCommenter"/>
		<lang.braceMatcher
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceBraceMatcher"/>
		<defaultLiveTemplatesProvider
				implementation="org.lice.lang.editing.LiceLiveTemplateProvider"/>
		<liveTemplateContext
				implementation="org.lice.lang.LiceContext"/>
		<lang.parserDefinition
				language="Lice"
				implementationClass="org.lice.lang.LiceParserDefinition"/>
		<lang.syntaxHighlighterFactory
				language="Lice"
				implementationClass="org.lice.lang.LiceSyntaxHighlighterFactory"/>
		<colorSettingsPage
				implementation="org.lice.lang.LiceColorSettingsPage"/>
		<bundledColorScheme path="/colorScheme/LiceDefault"/>
		<annotator
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceAnnotator"/>
		<annotator
				language="JAVA"
				implementationClass="org.lice.lang.psi.LiceSymbolsExtractingAnnotator"/>
		<completion.contributor
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceBuiltinSymbolsCompletionContributor"/>
	</extensions>

	<actions>
		<action
				id="Lice.NewLiceFile"
				class="org.lice.lang.NewLiceFile"
				text="Lice File"
				description="Create a lice script file">
			<add-to-group
					group-id="NewGroup"
					anchor="after"
					relative-to-action="NewFile"/>
		</action>
		<group id="Lice.Group" text="Lice">
			<!--<action id="Lice.RunFile" class="org.lice.lang.RunLiceFile"/>-->
			<action id="Lice.ShowSyntaxTree" class="org.lice.lang.ShowLiceFileSyntaxTree"/>
			<action id="Lice.ShowSemanticTree" class="org.lice.lang.ShowLiceFileSemanticTree"/>
			<add-to-group
					group-id="ProjectViewPopupMenuRunGroup"
					anchor="last"/>
		</group>
	</actions>
</idea-plugin>
