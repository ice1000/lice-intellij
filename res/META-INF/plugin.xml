<idea-plugin>
	<id>org.lice.lang</id>
	<name>Lice</name>
	<version>1.8.1</version>
	<category>Custom Languages</category>
	<vendor email="ice1000kotlin@foxmail.com" url="http://ice1000.org">ice1000</vendor>

	<description><![CDATA[
Lice language support.<br/>
Functions provided:<br/><br/>
<ul>
  <li>Semantics-based highlighting and error reporting</li>
  <li>Code completions</li>
  <li>Inspections and quick fixes</li>
  <li>Try Evaluate</li>
  <li>In-place evaluation</li>
  <li>Renaming</li>
  <li>SDK configuration and code execution</li>
  <li>Bread crumb, code folding, spell checking, structure view</li>
</ul>
]]></description>

	<change-notes><![CDATA[
1.8.1<br/>
<ul>
  <li>Bug fix of try-eval</li>
  <li>Improved renaming</li>
  <li>Improved thread-safety</li>
</ul>

<br/>

1.8<br/>
<ul>
  <li>Improved completion</li>
  <li>Supported renaming</li>
  <li>Bug fixes</li>
</ul>

<br/>

1.7.1<br/>
<ul>
  <li>Improved Windows capability and command line output</li>
  <li>Removed classes that are not working</li>
</ul>

<br/>

1.7<br/>
<ul>
  <li>Some minor changes and internal refactorings</li>
  <li>Improved parser, try-eval error reporter and annotator</li>
  <li>Better handling functions and anonymous functions when try-eval</li>
  <li>Support conversion of prelude functions in in-place evaluation</li>
  <li>Added download option for v3.3.2 and removed older buggy versions</li>
</ul>

<br/>

1.6<br/>
<ul>
  <li>A fatal bug fix. Now it's tested and verified to be bugless</li>
</ul>

<br/>

1.5<br/>
<ul>
  <li>Basic reference resolving, marking unresolved references</li>
  <li>Add in-place evaluation</li>
  <li>Support Lice v3.3.1 and v3.3.2 (final stable version)</li>
  <li>Fix bug of finding plugin path</li>
</ul>

<br/>

1.4<br/>
<ul>
  <li>Parser and action bug fixes</li>
  <li>Added bread crumb, code folding, structure view and spell checker</li>
</ul>

<br/>

1.3<br/>
<ul>
  <li>Try evaluate action</li>
  <li>Support Lice v3.3.0</li>
</ul>

<br/>

1.2<br/>
<ul>
  <li>Fixed no default working directory bug</li>
  <li>Improved File IO</li>
  <li>Added some basic quick fixes</li>
  <li>Improved SDK settings</li>
</ul>

<br/>

1.1<br/>

<ul>
  <li>Fixed color settings bug</li>
  <li>Added SDK configuration and code execution</li>
</ul>
]]></change-notes>

	<idea-version since-build="145.0"/>

	<depends>com.intellij.modules.lang</depends>

	<extensions defaultExtensionNs="com.intellij">
		<additionalTextAttributes scheme="Darcula" file="/colorSchemes/LiceDefault.xml"/>
		<additionalTextAttributes scheme="Default" file="/colorSchemes/LiceDefault.xml"/>
		<fileTypeFactory implementation="org.lice.lang.LiceFileTypeFactory"/>
		<configurationType implementation="org.lice.lang.LiceConfigurationType"/>
		<runConfigurationProducer implementation="org.lice.lang.execution.LiceRunConfigurationProducer"/>
		<frameworkSupport implementation="org.lice.lang.module.LiceFacetBasedFrameworkSupportProvider"/>
		<facetType implementation="org.lice.lang.module.LiceFacetType"/>
		<colorSettingsPage implementation="org.lice.lang.LiceColorSettingsPage"/>
		<defaultLiveTemplatesProvider implementation="org.lice.lang.editing.LiceLiveTemplateProvider"/>
		<liveTemplateContext implementation="org.lice.lang.LiceContext"/>
		<breadcrumbsInfoProvider implementation="org.lice.lang.editing.LiceBreadCrumbProvider"/>
		<lang.refactoringSupport
				language="Lice"
				implementationClass="org.lice.lang.psi.LiceRefactoringSupportProvider"/>
		<lang.psiStructureViewFactory
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceStructureViewFactory"/>
		<lang.foldingBuilder
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceFoldingBuilder"/>
		<spellchecker.support
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceSpellCheckingStrategy"/>
		<lang.commenter
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceCommenter"/>
		<lang.braceMatcher
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceBraceMatcher"/>
		<lang.parserDefinition
				language="Lice"
				implementationClass="org.lice.lang.LiceParserDefinition"/>
		<lang.syntaxHighlighterFactory
				language="Lice"
				implementationClass="org.lice.lang.LiceSyntaxHighlighterFactory"/>
		<annotator
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceAnnotator"/>
		<annotator
				language="JAVA"
				implementationClass="org.lice.lang.psi.LiceSymbolsExtractingAnnotator"/>
		<completion.contributor
				language="Lice"
				implementationClass="org.lice.lang.editing.LiceBuiltinSymbolsCompletionContributor"/>
	</extensions>

	<actions>
		<action
				id="Lice.NewLiceFile"
				class="org.lice.lang.action.NewLiceFileAction"
				text="Lice File"
				description="Create a lice script file">
			<add-to-group
					group-id="NewGroup"
					anchor="before"
					relative-to-action="NewFile"/>
		</action>
		<action
				id="Lice.TryEvaluate"
				class="org.lice.lang.action.TryEvaluateLiceExpressionAction">
			<keyboard-shortcut keymap="$default" first-keystroke="ctrl shift e"/>
			<add-to-group group-id="EditorPopupMenu1" anchor="first"/>
		</action>
		<group id="Lice.Group" text="Lice">
			<action id="Lice.ShowSemanticTree" class="org.lice.lang.action.ShowLiceFileSemanticTreeAction"/>
			<add-to-group
					group-id="ProjectViewPopupMenuRunGroup"
					anchor="last"/>
		</group>
	</actions>
</idea-plugin>
